<div class="top-nav--animals">






<div class="navbar">

  <div class="dropdown">
    <button class="dropbtn">Species
      <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-content">
      <% for species in @specieses %>
      <a href="/animals/species/<%= species %>"><%= species %></a>
      <% end %>
    </div>
  </div>

  <div class="dropdown">
    <button class="dropbtn">Availability
      <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-content">
      <a href="/animals/available">Available</a>
      <a href="/animals/adopted">Adopted</a>
    </div>
  </div>
</div>













<h1>Look at all the animals!</h1>

<h4><a id="new-animal-button" href="animals/new">Add New Animal</a></h4>


<div class="flex-container">
  <% for animal in @animals %>
  <div class="animal-container">
    <img class="animal-url--index"src="<%= animal.image_url%>" alt="A photo of <%= animal.name %>">

    <div class="animal-text">


    <h2><%= animal.name %></h2>
    <p>Age: <%= animal.age %></p>
    <p>Species: <%= animal.species %></p>
    <p>Availability: <%= animal.availability %></p>
    <a href="animals/<%= animal.id %>">View more info</a>

</div>

  </div>
  <% end %>
</div>
