<h1>Look at all the animals!</h1>

<h4><a href="animals/new">Add New Animal</a></h4>

<div id="top_nav">
  <ul><% for species in @specieses %>
    <li><a href="/animals/species/<%= species %>"><%= species %></a></li>
    <% end %>
  </ul>
</div>

<div id="availability_nav">
  <ul>Sort by availability
    <li><a href="/animals/available">Available</a></li>
    <li><a href="/animals/adopted">Adopted</a></li>
  </ul>
</div>



<div class="flex-container">
  <% for animal in @animals %>
  <div class="animal-container">
    <img class="animal-url--index"src="<%= animal.image_url%>" alt="A photo of <%= animal.name %>">

    <div class="animal-text">


    <h2><%= animal.name %></h2>
    <p>Age: <%= animal.age %></p>
    <p>Species: <%= animal.species %></p>
    <p>Availability: <%= animal.availability %></p>
    <a href="animals/<%= animal.id %>">View more info</a>

</div>

  </div>
  <% end %>
</div>
