<h1>Look at all the animals!</h1>

<h4><a href="animals/new">Add New Animal</a></h4>

<h4><select class="species" name="species">
  <% for animal in @animals %>
  <option value="<%= animal.species %>"><%= animal.species %></option>
  <% end %>
</select><a href="animals/species/<%= animal.species %>">Sort by species</a></h4>


<div id="animal-wrapper">
  <% for animal in @animals %>
  <div class="animal">
    <h3><%= animal.name %></h3>
    <p>Age: <%= animal.age %></p>
    <p>Species: <%= animal.species %></p>
    <p>Availability: <%= animal.availability %></p>
    <a href="animals/<%= animal.id %>">View more info</a>
  </div>
  <% end %>
</div>
