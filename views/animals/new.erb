
<div class="form-new--title">
  <h1><span>Add New Animal</span></h1>
</div>

<div class="container-form--new">



  <div class="form--new">

    <form action="/animals" method="post">

      <div class="form-el">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" required placeholder="Enter the animal's name" onfocus="this.placeholder = ''">
      </div>

      <div class="form-el">
        <label for="number">Age:</label>
        <input type="text" name="age" id="age" required placeholder="Enter the animal's age" onfocus="this.placeholder = ''">
      </div>

      <div class="form-el">
        <label for="species">Species:</label>
        <input type="text" name="species" id="species" required placeholder="Enter the animal's species" onfocus="this.placeholder = ''">
      </div>

      <div class="form-el">
        <label for="breed">Breed:</label>
        <input type="text" name="breed" id="breed" required placeholder="Enter the animal's breed" onfocus="this.placeholder = ''">
      </div>

      <div class="form-el">
        <label id="sex-label" for="sex">Sex:</label>

        <label id="male" for="male">Male<input type="radio" name="sex" id="male" checked></label>

        <label for="female" id="female">Female<input type="radio" name="sex" value="female" id="female"></label>
      </div>

      <div class="form-el">
        <label for="admission_date">Admission Date:</label>
        <input type="date" name="admission_date" id="admission_date" required onfocus="this.placeholder = ''">
      </div>

      <div class="form-el">
        <label for="availability">Availability:</label>
        <select name="availability">
        <option value="Available">Ready For Adoption</option>
        <option value="not ready for adoption">Not Ready For Adoption</option>
        <option value="Adopted">Adopted</option>
        </select>
      </div>

      <div class="form-el">
        <label for="image_url">Image URL:</label>
        <input type="text" name="image_url" id="image_url">
      </div>

      <div class="form-el">
        <label for="pet_description">Description</label>
        <textarea id="pet-description--new" name="pet_description" rows="8" cols="80" placeholder="Write something about the pet"></textarea>
      </div>

      <div class="form-el">
        <input id="submit-button" type="submit" value="Submit"/>
      </div>


    </form>

  </div>

</div>
